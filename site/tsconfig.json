{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/src/*": ["./src/*"],
      "@/app/*": ["./src/app/*"],
      "@/src/app/*": ["./src/app/*"],
      "@/components/*": ["./src/components/*"],
      "@/src/components/*": ["./src/components/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/src/lib/*": ["./src/lib/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/src/hooks/*": ["./src/hooks/*"],
      "@/types/*": ["./src/types/*"],
      "@/src/types/*": ["./src/types/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/src/utils/*": ["./src/utils/*"],
      "@/styles/*": ["./src/styles/*"],
      "@/src/styles/*": ["./src/styles/*"],
      "@repo/ui/*": ["../packages/ui/src/*"]
    },
    "skipLibCheck": true
  },
  "include": ["src/types/**/*.d.ts", "next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", ".bak"]
}
