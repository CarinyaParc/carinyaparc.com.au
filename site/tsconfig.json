{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    },
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "site/next-env.d.ts",
    "next.config.ts",
    ".next/types/**/*.ts",
    "src/**/*.ts",
    "src/app/sitemap.bak",
    "src/app/[slug]/page.bak"
  ],
  "exclude": ["node_modules"]
}
